<%-include("partials/header")-%>
<%-include("partials/navbar")-%>

<div class="container product px-4">
  <div class="row gx-1">

    <div class="col-md">
      <div class="p-5">
        <h1 class="product-heading">
          <%= title %>
        </h1>
        <h4 class="product-price">
          <%= price %>
        </h4>
        <p class="product-description">
          <%= description %>
        </p>
      </div>
    </div>
    <div class="col-sm">
      <div class="p-2">
        <img src="/<%= imageUrl %>" class="card-img-top" alt="<%= title %>">
      </div>
    </div>
  </div>
</div>
